{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": [
      "cloudzero",
      "credentials"
  ],
  "properties": {
      "cloudzero": {
          "type": "object",
          "properties": {
              "host": {
                  "type": "string"
              },
              "cluster_name": {
                  "type": "string",
                  "pattern": "^[a-z]+(-[a-z]+)*$"
              },
              "cloud_account_id": {
                  "type": [
                      "string",
                      "integer"
                  ]
              }
          },
          "required": [
              "host",
              "cluster_name",
              "cloud_account_id"
          ]
      },
      "credentials": {
          "type": "object",
          "properties": {
              "createSecret": {
                  "type": "boolean"
              }
          },
          "dependentRequired": {
              "createSecret": [
                  "api_key"
              ]
          }
      }
  }
}