{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "host": {
        "type": "string"
    },
    "clusterName": {
        "type": "string",
        "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$"
    },
    "cloudAccountId": {
        "type": [
            "string",
            "integer"
        ]
    },
    "apiKey":{
      "type": ["string"],
      "properties": {
          "createSecret" :{
              "type":"boolean"
          }
      },
      "dependentRequired": {
          "createSecret" : [
              "apiKey"
          ]
      }
    }
},
"required": [
    "host",
    "clusterName",
    "cloudAccountId",
    "apiKey"
    
]
  }